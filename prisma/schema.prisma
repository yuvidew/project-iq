// ==============================
// Prisma Generator & Datasource
// ==============================

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==============================
// User & Auth Models
// ==============================

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  emailVerified Boolean @default(false)
  lastActiveOrganizationId Int?
  lastActiveOrganization   Organization? @relation("LastActiveOrganization", fields: [lastActiveOrganizationId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions            Session[]
  accounts            Account[]
  memberships         OrganizationMember[]
  ownedOrganizations  Organization[] @relation("OrganizationOwner")
  projectMemberships  ProjectMember[]
  projectLeadProjects Project[] @relation("ProjectLead")
  assignedTasks   Task[]       @relation("TaskAssignee")
  taskMemberships TaskMember[] @relation("TaskMemberUser")
  
  invites     Invitation[] @relation("InvitedUser")
  sentInvites Invitation[] @relation("SentInvites")


  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("session")
}

model Account {
  id         String   @id @default(cuid())
  accountId  String
  providerId String
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

// Also update OrganizationMember.userId (and any other FK to User) to String.


// ==============================
// Organization Models
// ==============================

model Organization {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique

  // ✅ description added (optional)
  description String?

  logoUrl     String?
  ownerId     String
  owner       User     @relation("OrganizationOwner", fields: [ownerId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // ✅ inverse relation for last active org
  lastActiveUsers User[] @relation("LastActiveOrganization")

  members     OrganizationMember[]
  projects    Project[]
  invites   Invitation[]

  @@map("organization")
}

model OrganizationMember {
  id             Int  @id @default(autoincrement())
  userId         String
  organizationSlug String

  role           OrganizationRole @default(MEMBER)

  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization   Organization @relation(fields: [organizationSlug], references: [slug], onDelete: Cascade)

  createdAt      DateTime @default(now())

  @@unique([userId, organizationSlug])
  @@index([organizationSlug])
  @@map("organization_member")
}


// ==============================
// Project Models
// ==============================

model Project {
  id             String   @id @default(cuid())

  // Basic info
  name           String
  description    String?

  // Status & priority
  status         ProjectStatus   @default(PLANNING)
  priority       ProjectPriority @default(MEDIUM)

  // Dates
  startDate      DateTime?
  endDate        DateTime?

  // Relations
  organizationSlug String
  organization     Organization @relation(fields: [organizationSlug], references: [slug], onDelete: Cascade)

  projectLeadEmail String?
  projectLead      User? @relation("ProjectLead", fields: [projectLeadEmail], references: [email])

  members        ProjectMember[]
  tasks Task[]


  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([organizationSlug])
  @@map("project")
}

model ProjectMember {
  id        Int    @id @default(autoincrement())

  projectId String
  userId    String

  role      ProjectMemberRole @default(MEMBER)

  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  joinedAt  DateTime @default(now())

  @@unique([projectId, userId])
  @@index([userId])
  @@map("project_member")
}

// ==============================
// Task Models
// ==============================
model Task {
  id          String     @id @default(cuid())
  name        String
  description String?
  status      TaskStatus @default(TODO)
  position    Int        @default(0)      // order within a status column
  dueDate     DateTime?

  projectId String
  project   Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  assigneeId String
  assignee   User?    @relation("TaskAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)

  members    TaskMember[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([projectId, status])
  @@unique([projectId, status, position], name: "task_column_order")
}

model TaskMember {
  id     Int    @id @default(autoincrement())
  taskId String
  userId String


  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation("TaskMemberUser", fields: [userId], references: [id], onDelete: Cascade)


  @@unique([taskId, userId])
  @@index([userId])
}


// ==============================
// Invitation Models
// ==============================



model Invitation {
  id               String   @id @default(cuid())
  email            String
  role             OrganizationRole
  token            String   @unique

  status           InvitationStatus @default(PENDING)

  expiresAt        DateTime
  acceptedAt       DateTime?

  organizationSlug String
  teamId           String?
  invitedById      String
  invitedUserId    String?

  organization   Organization @relation(fields: [organizationSlug], references: [slug])

  invitedBy      User         @relation("SentInvites", fields: [invitedById], references: [id])
  invitedUser    User?        @relation("InvitedUser", fields: [invitedUserId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email, organizationSlug])
}


// ==============================
// Notification Models
// ==============================

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      NotificationType
  data      Json
  read      Boolean  @default(false)

  user      User     @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}







// ==============================
// Enums
// ==============================

enum NotificationType {
  INVITATION
}


enum OrganizationRole {
  OWNER
  ADMIN
  MEMBER
}

enum ProjectStatus {
  PLANNING
  IN_PROGRESS
  ON_HOLD
  COMPLETED
  ACTIVE
}

enum ProjectPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum ProjectMemberRole {
  LEAD
  MEMBER
}

enum TaskStatus {
  BACKLOG
  IN_REVIEW
  TODO
  IN_PROGRESS
  DONE
}

enum TeamRole {
  ADMIN
  MEMBER
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
  EXPIRED
}

