// ==============================
// Prisma Generator & Datasource
// ==============================

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==============================
// User & Auth Models
// ==============================

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  emailVerified Boolean @default(false)
  lastActiveOrganizationId Int?
  lastActiveOrganization   Organization? @relation("LastActiveOrganization", fields: [lastActiveOrganizationId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions            Session[]
  accounts            Account[]
  memberships         OrganizationMember[]
  ownedOrganizations  Organization[] @relation("OrganizationOwner")

  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("session")
}

model Account {
  id         String   @id @default(cuid())
  accountId  String
  providerId String
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

// Also update OrganizationMember.userId (and any other FK to User) to String.


// ==============================
// Organization Models
// ==============================

model Organization {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique

  // ✅ description added (optional)
  description String?

  logoUrl     String?
  ownerId     String
  owner       User     @relation("OrganizationOwner", fields: [ownerId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // ✅ inverse relation for last active org
  lastActiveUsers User[] @relation("LastActiveOrganization")

  members     OrganizationMember[]

  @@map("organization")
}

model OrganizationMember {
  id             Int  @id @default(autoincrement())
  userId         String
  organizationId Int

  role           OrganizationRole @default(MEMBER)

  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  createdAt      DateTime @default(now())

  @@unique([userId, organizationId])
  @@index([organizationId])
  @@map("organization_member")
}


// ==============================
// Project Models
// ==============================

model Project {
  id             String   @id @default(cuid())

  // Basic info
  name           String
  description    String?

  // Status & priority
  status         ProjectStatus   @default(PLANNING)
  priority       ProjectPriority @default(MEDIUM)

  // Dates
  startDate      DateTime?
  endDate        DateTime?

  // Relations
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  projectLeadId  String?
  projectLead    User? @relation("ProjectLead", fields: [projectLeadId], references: [id])

  members        ProjectMember[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([organizationId])
  @@map("project")
}

model ProjectMember {
  id        Int    @id @default(autoincrement())

  projectId String
  userId    String

  role      ProjectMemberRole @default(MEMBER)

  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  joinedAt  DateTime @default(now())

  @@unique([projectId, userId])
  @@index([userId])
  @@map("project_member")
}



// ==============================
// Enums
// ==============================

enum OrganizationRole {
  OWNER
  ADMIN
  MEMBER
}

enum ProjectStatus {
  PLANNING
  IN_PROGRESS
  ON_HOLD
  COMPLETED
  ACTIVE
}

enum ProjectPriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum ProjectMemberRole {
  LEAD
  MEMBER
}

